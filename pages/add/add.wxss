/* 分类 */
.type-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx ;
}
.type-item {
  margin: 10rpx;
  padding: 10rpx;
}
.choose-type {
  border: 5rpx solid #FF6146;
  border-radius: 20rpx;
}
.no-choose {
  border: 5rpx solid #eee;
  border-radius: 20rpx;
}


/* 图片 */
.box{
  display: flex;
  /* flex-direction: row; */
