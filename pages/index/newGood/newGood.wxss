/* 商品列表 */

.goods-box {
  display: flex;
  flex-direction: row;
  padding: 20rpx 20rpx 0rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  background: rgb(235, 234, 234);
}
.goods-broder{
  background-color: #fafafa;
  border-radius: 20rpx;
}
.good-img {
  width: 344rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.good-bootom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 15rpx 20rpx 10rpx ;
}
.good-title {
  font-size: 36rpx;
  margin: 10rpx 10rpx;
  /* 处理文字超出范围，限制文字显示 */
  width: 300rpx;
  height: 50rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}


.good-price{
  color: red;
  font-size: 33rpx;
  font-weight: 600;
}
.good-tag {
  /* border-top:1px #989898 solid; */
  font-size: 28rpx;
  color: rgb(88, 85, 85);
}